                <p>${project.totalFiles || 0} files</p>
                <div class="project-meta">
                    <span>${(project.languages || []).join(', ') || 'N/A'}</span>
                    <span>Complexity: ${getComplexityLabel(complexityScore)}</span> {/* Adjust as needed */}
